<div class="navbar navbar-expand-sm navbar-light navbar-discosport fixed-top">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/numama/image/upload/v1616778797/DISCOSPORT/LOGO1_DISCOSPORT_MASTER_wtwyli.png" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <p class="m-2"> Hello, <%= current_user.first_name %></p>
        <li class="nav-item active">
          <li class="nav-item dropdown">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar , :width => 40, :height => 40, :gravity => "faces",  class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% elsif current_user.linkedin_picture_url? %>
              <%= image_tag current_user.linkedin_picture_url, class: "rounded-circle dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, height: '50px'  %>
            <% else %>
              <%= image_tag "https://res.cloudinary.com/numama/image/upload/v1617458735/DISCOSPORT/ICON_DISCOSPORT_bwjmfq.png" , :width => 40, :height => 40, :gravity => "faces",  class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "About Discop", about_us_path, class: "dropdown-item" %>
              <%= link_to "Virtual Forum", "/bootcamp" , class: "dropdown-item"%>
              <a class="dropdown-item" href="mailto:contact@discosport.tv?subject=Hello">Contact Us</a>
              <%= link_to 'Profile', profile_path(current_user) , class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              <% if current_user.email == "patrickzuchowicki@basiclead.com" || current_user.email == "joa@birds.art.br" || current_user.email == 'joa.azria@gmail.com'%>
                <%= link_to "DASHBOARD", dashboard_path, class: "dropdown-item text-danger" %>
              <% end %>
            </div>
          </li>
        <% else %>
          <li class="nav-item ">
            <div class="row">
              <%= link_to "Login ", new_user_session_path, class: "nav-link text-muted m-2" %>
              <%= link_to "About Us", about_us_path, class: "nav-link text-muted m-2" %>
              <%= link_to "Virtual Forum", "/bootcamp" , class: "nav-link text-muted m-2"%>
              <%= mail_to "contact@discosport.tv", "Contact Us", class: "nav-link text-muted m-2" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>


<div class="dashboard-card dashboard-card--horizontal">
  <div class="dashboard-card__body">
    <h4 class="dashboard-card__title font-weight-bold text-center">FIND A  <span class="text-primary"> DELEGATE</span></h4>
    <%= form_tag(dashboard_path, :method => "get", class: 'dashboard-card__form') do %>
      <div class="input-group">
        <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
  </div>
</div>


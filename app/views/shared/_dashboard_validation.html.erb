<div class="mt-3">
</div>
<% @users_pending.each do |user| %>
  <div class="card mb-3" >
    <div class="row g-0">
      <div class="col-md-2">
        <% if user.avatar.attached? %>
          <%= image_tag user.avatar, :style => "height: 100%; width: 200px;", :gravity => "face" %>
        <% else %>
          <%= image_tag "https://res.cloudinary.com/numama/image/upload/v1616795855/DISCOSPORT/discop_visual_boxing1_lwsyrs.png" , :style => "height: 100%; width: 200px;" %>
        <% end %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title text-uppercase"><%= user.first_name %> <%= user.last_name %></h5>
          <h6 class="card-text"> <span class="font-weight-bold"><%= user.company %></span>  from <span class="font-weight-bold"><%= user.country %></span>  and attending as <span class="font-weight-bold"><%= user.member %></span></h6>
          <p class="card-text"> <span class="font-weight-bold"><i class="far fa-envelope"> </i> <%= user.email %></span>  | <i class="fab fa-whatsapp"></i>  <span class="font-weight-bold"><%= user.whatsapp %></span> </p>
          <div class="d-flex">
            <%= link_to "linkedin", user.linkedin, :target => '_blank', :class => "btn btn-sm btn-outline-primary text-uppercase m-2" %>
            <%= link_to "#{ current_user.company} WEBSITE", current_user.company, class: "btn btn-sm btn-outline-primary text-uppercase m-2" %>
            <%= link_to "Delegate Profile", root_path, class: " btn btn-sm btn-outline-primary text-uppercase m-2" %>
          </div>
          <p class="card-text"><small class="text-muted"><%= user.created_at %></small></p>
        </div>
      </div>
      <div class="col-md-2 align-self-center ">
        <%#= link_to user.status, edit_profile_path(user), class: "btn btn-lg btn-outline-danger text-uppercase justify-content-right" %>
        <%= simple_form_for user, url: profile_path(user), method: :patch do |f| %>
          <%= f.hidden_field :status, value: 'approved' %>
          <%= f.submit user.status, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

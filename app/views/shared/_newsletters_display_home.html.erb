
<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @newsletters.last(6).each do |newsletter| %>
    <div class="col">
      <div class="card h-100">
        <%= image_tag newsletter.photo, :crop=>"crop", :width=>200, :height=>200, :class=>'card-img-top'%>
        <div class="card-body">
          <h5 class="card-title"> <%= newsletter.title %></h5>
          <p class="card-text font-weight-bold"><%= newsletter.punshline %></p>
          <!-- <p class="card-text"><%#= newsletter.article %></p> -->
        </div>
        <div class="card-footer">

<button type="button" class="btn btn-sm btn-block btn-primary" data-toggle="modal" data-target="#newsModal<%= newsletter.id %> ">
  Read the Article
</button>
        </div>
      </div>
    </div>
  <div class="modal fade" id="newsModal<%= newsletter.id %>" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title texte-uppercase"> <%= newsletter.title %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= image_tag newsletter.photo, :crop=>"crop", :width=>200, :height=>200, :class=>'card-img-top'%>
            <p class="font-weight-bold"><%= newsletter.punshline %></p>
            <br>
            <p class=""><%= newsletter.article %></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= link_to "Source", newsletter.url, :class => "btn btn-outline-primary", :target => '_blank' %>
        </div>
      </div>
    </div>
  </div>

  <% end %>

</div>

<div id="image" class="banner" style="background-image: linear-gradient(rgba(0,53,135,0.4),rgba(0,53,135,0.4)), url(https://res.cloudinary.com/numama/image/upload/v1617361272/DISCOSPORT/banner3_my4aue.jpg);">
  <div class="container p-3">
    <div class="container">
      <div class="col-6">
        <h2 class="text-white">Welcome to your <span class="text-danger">Profile</span> </h2>
      </div>
      <div class="col-6">
        <!-- <h4 class="text-white">We are here to <span class="text-danger">connect </span> and to helps you to  <span class="text-danger"> growth your business</span></h4> -->
      </div>
      <hr>
      <div class="d-flex align-items-end flex-column" style="height: 200px;">
        <div class="mt-auto ">
          <!-- <h6 class="text-danger text-right "> <span class="text-white">DISCOSPORT</span> IS THE NEW FAST-GROWING MARKETPLACE OF SUBSAHARAN AFRICA</h6> -->
          <h6 class="text-white text-right"> LIVE FROM LOS ANGELES & KIGALI </h6>
          <% if current_user.status == 'approved' %>
          <p  class="text-right ">  25 OCT. - 19 NOV. 2021  <span class="text-success font-weight-bold"> YOU ARE INVITED</span></p>
          <% else %>
          <p  class="text-right ">  25 OCT. - 19 NOV. 2021  <span class="text-danger font-weight-bold"> YOUR PROFILE WILL BE SOON APPROVED</span></p>
          <% end %>

        </div>
      </div>
      <a class="btn btn-lg btn-outline-success" href="mailto:contact@discosport.tv?subject=Hello">CONTACT US</a>
    </div>
  </div>
</div>
<hr>
  <div class="row">
    <div class="col-md-4">
      <div class="card mb-3">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar ,  :gravity => "faces",  class: "card-img-top rounded-circle p-3", alt: "Card image cap" %>
        <% else %>
          <%= image_tag "https://res.cloudinary.com/numama/image/upload/v1616795855/DISCOSPORT/discop_visual_boxing1_lwsyrs.png" , :style => "height: 100%; width: 200px;" %>
        <% end %>
        <!-- <img class="card-img-top rounded-circle p-3" src="https://res.cloudinary.com/numama/image/upload/v1617038321/DISCOSPORT/avatar_mushiki_discop_qiuv2c.png" alt="Card image cap"> -->
        <div class="card-body">
          <h5 class="card-title text-primary"><%= @user.gender %> <%= @user.first_name %>  <span class="text-uppercase"><%= @user.last_name %></span></h5>
          <h5 class="card-text"><%= @user.job %></h5>
          <h6 class="card-text">Attending as : <%= @user.member %></h6>
          <div class="d-flex flex-column mt-3 pl-2">
            <h6 class="text-left"><i class="fas fa-at"></i> : <%= @user.email %></h6>
            <h6 class="text-left"><i class="fab fa-whatsapp"> : </i><%= @user.whatsapp %></h6>
          </div>
          <!-- <button > </button> -->
          <!-- <i class="fab fa-linkedin"></i> -->
          <%= link_to "Linkedin ", @user.linkedin , :class => "btn btn-block btn-outline-primary", :target => '_blank' %>
          <!-- <img class="card-img-bottom p-3" src="https://res.cloudinary.com/numama/image/upload/v1617099999/DISCOSPORT/image-asset_fwqjkm.png" alt="Card image cap"> -->
        </div>
        <class class="card-footer">
          <!-- <button class="btn btn-block btn-danger">hello</button> -->
          <% if current_user.email == "patrickzuchowicki@basiclead.com" || "joa@birds.art.br"%>
          <%= link_to "EDIT PROFILE", edit_user_registration_path, class: "btn btn-block m-1 btn-outline-danger" %>
          <%= link_to "DASHBOARD", dashboard_path, class: "btn btn-block m-1 btn-danger" %>

          <% else %>
          <%= link_to "EDIT YOUR PROFILE", edit_user_registration_path, class: "btn btn-block btn-danger" %>
          <% end %>
        </class>
      </div>
    </div>
    <div class="col-md-8 mt-5">
      <h3 class="text-secondary text-uppercase"><%= @user.company %></h3>
      <h5 class="text-secondary">Main activity : <%= @user.activity %>. </h5>
      <div class="row">
        <div class="col-4">
          Country : <%= @user.country %>
        </div>
        <div class="col-4">
          <%= @user.website %>
        </div>
        <div class="col-4">
          <%= @user.phone %>
        </div>
      </div>
      <div class="row m-2 text-right">
        <%#= link_to "VISITE #{ @user.company} WEBSITE", @user.website, class: "btn btn-block btn-sm btn-outline-primary text-uppercase" %>
        <%= link_to "VISITE #{@user.company} WEBSITE", "http://#{@user.website}" , :class => "btn btn-block btn-outline-primary text-uppercase", :target => '_blank' %>

      </div>
      <hr>
      <p class="text-justify"><span class="text-danger">PRESENTATION: </span> <%= @user.release %></p>
    </div>
  </div>
  <hr>
  <div class="mt-5">
<% if current_user.status == 'approved' %>

<%= render 'shared/pitching_participate' %>
<%= render 'shared/partnership' %>
<% else %>

  <h5 class="text-primary text-center">SOON MORE INFORMATION AVAILABLE </h5>

<% end %>

</div>

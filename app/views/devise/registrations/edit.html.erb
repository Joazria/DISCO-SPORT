
<div class="container">
  <h2 class="text-center mt-3">Edit Your <%= resource_name.to_s.humanize %> Registration</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

            <div class="row">
      <div class="col-md-2">
        <%= f.input :gender, collection: ['Mr', 'Mrs']%>
      </div>
      <div class="col-md-5">
        <%= f.input :first_name,
                        as: :string,
                        label: 'First Name',
                        placeholder: 'Patrick' %>
      </div>
      <div class="col-md-5">
        <%= f.input :last_name,
                      as: :string,
                      label: 'Last Name',
                      placeholder: 'Zuchowicki' %>
      </div>
            </div>

       <%= f.input :member,
                    label: 'Attending as ',
                    collection: [ 'VENDOR',
                     'SPORTS FEDERATION',
                     'SPORTING CLUB',
                     'PLATFORM',
                     'SPORTS VENUE',
                     'ADVERTISER',
                     'CONTENT CREATOR',
                     'PRESS',
                     'EXPERT']%>

      <div class="row">
    <h5 class="text-danger mt-5">
      ADD YOUR AVATAR / PHOTO
    </h5>
        </div>
    <div class="row">
      <span class="text-danger">
      <%= f.input :avatar,
                            label: 'Upload your photo',
                            as: :file %>

      </span>
    </div>


    </div>

  <h5 class="text-primary mt-5">
      COMPANY INFORMATION
    </h5>
            <%= f.input :company,

                        as: :string,
                        label: 'Company',
                        placeholder: 'Basic Lead' %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :activity,
                    collection: ['ADVERTISING AGENCY',
                        'ADVISORY SERVICES',
                        'ARCHITECTURAL / DESIGN FIRM',
                        'ATHLETES REPRESENTATION AGENCY',
                        'BROADCASTER | Private',
                        'BROADCASTER | Public',
                         'CONSUMER BRAND',
                         'DELIVERY SOLUTION',
                         'DIGITAL MARKETING AGENCY',
                         'DIGITAL FIRST COMPANY',
                         'DUBBING SOLUTION',
                         'ECOMMERCE PLATFORM',
                         'EQUIPMENT / NEW TECH DISTRIBUTION',
                         'FUNDING / BANK',
                         'FULFILLMENT / SHIPPING SOLUTION',
                          'INDEPENDENT ANIMATOR',
                          'INDEPENDENT DIRECTOR',
                          'INDEPENDENT JOURNALIST',
                          'INDEPENDENT WRITER',
                          'MANUFACTURING',
                          'MARKETER',
                          'MARKETING AGENCY',
                          'MEDIA BUYING AGENCY',
                          'MEDIA RIGHTS DISTRIBUTOR',
                          'MERCHANDISING RIGHTS DISTRIBUTOR',
                          'MOBILE OPERATOR',
                          'MONETIZATION SOLUTION',
                          'MUSIC PRODUCTION',
                          'PAY-TV OPERATOR',
                          'PAYMENT PROCESSING SOLUTION',
                          'POST PRODUCTION SERVICE',
                          'PREMIUM CABLE CHANNEL',
                          'PRESS',
                          'PRODUCTION COMPANY',
                          'PUBLIC ORGANISATION',
                          'RADIO STATION',
                          'RESEARCH CONSULTANCY',
                          'SOCIAL MEDIA',
                          'SPORTING CLUB',
                          'SPORTS ARENA',
                          'SPORTS FEDERATION',
                          'SPORTS MARKETING',
                          'SPORTS TOURISM',
                          'STREAMING PLATFORM',
                          'SUBSCRIBERS MANAGEMENT SOLUTION',
                          'TALENT AGENCY',
                          'TRADE ASSOCIATION',
                          'VIDEO GAME DEVELOPER',
                          'VIDEO GAMING PLATFORM']%>
      </div>
      <div class="col-md-6">
        <%= f.input :country,

                        as: :country,
                        label: 'Country',
                        placeholder: 'Rwanda' %>
     </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :phone,
                        as: :string,
                        label: 'phone',
                        placeholder: '+5521996995765' %>
      </div>
      <div class="col-md-6">
        <%= f.input :website,
                        as: :string,
                        label: 'Website',
                        placeholder: 'www.discosport.tv' %>
      </div>
    </div>

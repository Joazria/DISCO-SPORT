<%= render 'devise/shared/banner_log_in' %>
<div class="container">
  <h3 class="m-5 text-center"> <span class="text-danger">SIGN UP</span> <span class="text-primary">NOW</span></h3>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">

    <h5 class="text-primary mt-5">
      LOG IN INFORMATION
    </h5>

        <div class="row">
      <div class="col-md-2">
        <%= f.input :gender, collection: ['Mr', 'Mrs']%>
      </div>
      <div class="col-md-5">
        <%= f.input :first_name,
                        as: :string,
                        label: 'First Name',
                        placeholder: 'Patrick' %>
      </div>
      <div class="col-md-5">
        <%= f.input :last_name,
                      as: :string,
                      label: 'Last Name',
                      placeholder: 'Zuchowicki' %>
      </div>
    </div>

       <%= f.input :member,
                    label: 'Attending as ',
                    collection: [ 'VENDOR',
                     'SPORTS FEDERATION',
                     'SPORTING CLUB',
                     'PLATFORM',
                     'SPORTS VENUE',
                     'ADVERTISER',
                     'CONTENT CREATOR',
                     'PRESS',
                     'EXPERT']%>
      <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email",
                        placeholder: 'joa@birds.art.br' }%>
      <%= f.input :avatar,
                            label: 'Upload your photo',
                            as: :file %>
    </span>
    <h5 class="text-primary mt-5">
      PROFILE INFORMATION
    </h5>
    <p class="text-primary">Following  informations are optionals but are usefull to create your profile </p>

        <%= f.input :job,
                    as: :string,
                    label: 'Job Function',
                    placeholder: 'CEO' %>
   <div class="row">
      <div class="col-md-6">
        <%= f.input :whatsapp,
                        as: :string,
                        label: 'whatsapp',
                        placeholder: '+55 21 996995765' %>
      </div>
      <div class="col-md-6">
        <%= f.input :linkedin,
                        as: :string,
                        label: 'linkedin',
                        placeholder: 'https://www.linkedin.com/in/joa-azria/' %>
      </div>
    </div>
  <h5 class="text-primary mt-5">
      COMPANY INFORMATION
    </h5>
            <%= f.input :company,

                        as: :string,
                        label: 'Company',
                        placeholder: 'Basic Lead' %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :activity,
                    collection: ['ADVERTISING AGENCY',
                        'ADVISORY SERVICES',
                        'ARCHITECTURAL / DESIGN FIRM',
                        'ATHLETES REPRESENTATION AGENCY',
                        'BROADCASTER | Private',
                        'BROADCASTER | Public',
                         'CONSUMER BRAND',
                         'DELIVERY SOLUTION',
                         'DIGITAL MARKETING AGENCY',
                         'DIGITAL FIRST COMPANY',
                         'DUBBING SOLUTION',
                         'ECOMMERCE PLATFORM',
                         'EQUIPMENT / NEW TECH DISTRIBUTION',
                         'FUNDING / BANK',
                         'FULFILLMENT / SHIPPING SOLUTION',
                          'INDEPENDENT ANIMATOR',
                          'INDEPENDENT DIRECTOR',
                          'INDEPENDENT JOURNALIST',
                          'INDEPENDENT WRITER',
                          'MANUFACTURING',
                          'MARKETER',
                          'MARKETING AGENCY',
                          'MEDIA BUYING AGENCY',
                          'MEDIA RIGHTS DISTRIBUTOR',
                          'MERCHANDISING RIGHTS DISTRIBUTOR',
                          'MOBILE OPERATOR',
                          'MONETIZATION SOLUTION',
                          'MUSIC PRODUCTION',
                          'PAY-TV OPERATOR',
                          'PAYMENT PROCESSING SOLUTION',
                          'POST PRODUCTION SERVICE',
                          'PREMIUM CABLE CHANNEL',
                          'PRESS',
                          'PRODUCTION COMPANY',
                          'PUBLIC ORGANISATION',
                          'RADIO STATION',
                          'RESEARCH CONSULTANCY',
                          'SOCIAL MEDIA',
                          'SPORTING CLUB',
                          'SPORTS ARENA',
                          'SPORTS FEDERATION',
                          'SPORTS MARKETING',
                          'SPORTS TOURISM',
                          'STREAMING PLATFORM',
                          'SUBSCRIBERS MANAGEMENT SOLUTION',
                          'TALENT AGENCY',
                          'TRADE ASSOCIATION',
                          'VIDEO GAME DEVELOPER',
                          'VIDEO GAMING PLATFORM']%>
      </div>
      <div class="col-md-6">
        <%= f.input :country,

                        as: :country,
                        label: 'Country',
                        placeholder: 'Rwanda' %>
     </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :phone,
                        as: :string,
                        label: 'phone',
                        placeholder: '+5521996995765' %>
      </div>
      <div class="col-md-6">
        <%= f.input :website,
                        as: :string,
                        label: 'Website',
                        placeholder: 'www.discosport.tv' %>
      </div>
    </div>
   <!--  <h5 class="text-primary text-uppercase mt-5">Present Yourself, why are you participating to DISCOP</h5>
    <p class="text-danger">To help us plan well-prepared and well-researched meetings, tell us about your reasons for attending DISCOSPORT 100% Virtual | Sub-Saharan Africa.</p>
    <%= f.input :release,
                    as: :text,
                    label: 'Presentation',
                    placeholder: 'To help us plan well-prepared and well-researched meetings, tell us about your reasons for attending DISCOSPORT 100% Virtual | Sub-Saharan Africa.' %>
  </div> -->
      <div class="row">
        <div class="col-md-6">
          <%= f.input :password,
                            required: true,
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password",
                            placeholder: '******'  } %>
        </div>
        <div class="col-md-6">
          <%= f.input :password_confirmation,
                            required: true,
                            input_html: { autocomplete: "new-password",
                            placeholder: '******'  } %>
        </div>
    </div>
  <div class="form-actions  row">
    <div class="col-6">
      <%= f.button :submit, "Sign up", class: "btn btn-success btn-lg m-3" %>
      <%#= render "devise/shared/links" %>
        <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-primary m-3" %><br />
  <%# resource_class.omniauth_providers.each do |provider| %>
    <%#= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-outline-success m-3"%><br />



  <%# end %>
  <%# end %>
    </div>
  </div>
<% end %>
</div>

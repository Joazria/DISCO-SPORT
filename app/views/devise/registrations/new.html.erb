      <h3 class="text-primary m-5 text-center">REGISTER NOW</h3>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs d-flex justify-content-center">
    <div class="col-6">
      <div class="row">
        <div class="col-2">
    <%= f.input :gender, collection: ['Mr', 'Mrs']
                    # as: :string,
                    # label: 'Mr/Mrs',
                    # placeholder: 'Mr / Mrs'
                    %>
        </div>
        <div class="col-5">
    <%= f.input :first_name,
                    as: :string,
                    label: 'First Name',
                    placeholder: 'John' %>
        </div>
        <div class="col-5">
      <%= f.input :last_name,
                    as: :string,
                    label: 'Last Name',
                    placeholder: 'Smith' %>
        </div>
      </div>
      <h5>LOGIN INFORMATION</h5>

    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email",
                placeholder: 'joa@birds.art.br' }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password",
                placeholder: '******'  } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password",
                placeholder: '******'  } %>

      <h5>PESSOAL INFORMATION</h5>

<div class="row">
  <div class="col-6">
          <%= f.input :whatsapp,
                    as: :string,
                    label: 'whatsapp',
                    placeholder: '+5521996995765' %>

  </div>
  <div class="col-6">
       <%= f.input :linkedin,
                    as: :string,
                    label: 'linkedin',
                    placeholder: 'https://www.linkedin.com/in/joa-azria/' %>
  </div>
</div>
      <%= f.input :photo,
                label: 'upload your photo',
                as: :file %>




<h5>COMPANY INFORMATION</h5>
<div class="row">
  <div class="col-6">
        <%= f.input :company,
                    as: :string,
                    label: 'Company',
                    placeholder: 'Basic Lead' %>

  </div>
  <div class="col-6">
    <%= f.input :country,

                    as: :string,
                    label: 'Country',
                    placeholder: 'Rwanda' %>
  </div>
</div>
<div class="row">
  <div class="col-6">
          <%= f.input :phone,
                    as: :string,
                    label: 'phone',
                    placeholder: '+5521996995765' %>

  </div>
  <div class="col-6">
        <%= f.input :website,
                    as: :string,
                    label: 'Website',
                    placeholder: 'www.discosport.tv' %>
  </div>
</div>

    <%= f.input :activity,
                collection: ['ADVERTISING AGENCY', 'BROADCASTER | Private', 'BROADCASTER | Public', 'CONSUMER BRAND', 'DELIVERY SOLUTION', 'DIGITAL MARKETING', 'AGENCY', 'DUBBING SOLUTION', 'ECOMMERCE PLATFORM', 'EQUIPMENT / NEW TECH DISTRIBUTION', 'FUNDING / BANK', 'INDEPENDENT ANIMATOR', 'INDEPENDENT DIRECTOR', 'INDEPENDENT JOURNALIST', 'INDEPENDENT WRITER',
                            'LAW FIRM','MANUFACTURER','MARKETER','MERCHANDISER','MOBILE OPERATOR','MONETIZATION SOLUTION','MUSIC PRODUCTION','PAY-TV OPERATOR','PAYMENT PROCESSING SOLUTION','POST PRODUCTION SERVICE','PREMIUM CABLE CHANNEL','PRESS','PRODUCTION COMPANY','PUBLIC ORGANISATION','RADIO STATION','RESEARCH CONSULTANCY','SOCIAL MEDIA','SPORTING CLUB','SPORTS ARENA','SPORTS FEDERATION','SPORTS MARKETING','STREAMING PLATFORM','SUBSCRIBERS MANAGEMENT SOLUTION','TALENT AGENCY','TV RIGHTS DISTRIBUTOR','VIDEO GAME DEVELOPER',
                            'VIDEO GAMING PLATFORM', 'OTHER'],
                    input_html: { multiple: true }                    # as: :string,
                    # label: 'activity',
                    # placeholder: 'Select your main activity'
                    %>
<h5>PRESENT YOURSELF TO THE OTHER DELEGATES</h5>

      <%= f.input :release,
                    as: :text,
                    label: 'Present Yourself, why are you participating to Discop',
                    placeholder: 'I m JoA your virtual assistant, I m participating to the DISCOSPORT to make your journey with us a bether one' %>
      <%= f.input :status,
                    as: :text,
                    label: 'status',
                    placeholder: 'Sr / Sra' %>
      <%= f.input :member,
                    as: :text,
                    label: 'member',
                    placeholder: 'Sr / Sra' %>

    </div>

  </div>

  <div class="form-actions  d-flex justify-content-center">
    <div class="col-6">
    <%= f.button :submit, "Sign up", class: "btn btn-success m-3" %>
  <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

